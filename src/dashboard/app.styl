body
    font-family: 'Source Sans Pro', sans-serif

.wrapper
    padding-bottom: 30px

.box
    background: #FFF
    margin: 0 auto
    width: 800px
    border-radius: 4px
    box-shadow: 0px 1px 4px rgba(0,0,0,0.29)    

header
    width: 800px
    margin: 0 auto

    h1
        color: #333
        margin: 0
        padding: 10px 15px 15px 15px
        display: inline-block
        font-size: 30px

article
    padding: 20px

table
    width: 100%

    thead
        tr
            border-bottom: 2px solid #ECEEF2

        h3
            color: #689CF0
            font-size: 16px
            text-transform: uppercase

        h4
            color: #ADA9A9
            font-size: 12px

    tbody
        th
            text-align: left

            h2
                color: #333
                font-size: 16px

        td
            padding: 20px 0
            width: 10%
            position: relative

            &:after
                position: absolute
                background: #EFF0F3
                width: 100%
                height: 1px
                content: ""
                display: block
                top: 50%

            .circle
                border-radius: 50%
                width: 12px
                height: 12px
                margin: 0 auto
                z-index: 1
                position: absolute
                top: 50%
                left: 50%
                margin: -5px

                span
                    display: none

                &.green
                    background: #339966

                &.orange
                    background: #f29d50

                &.red
                    background: #cc3300

            &.column0
                &:after
                    width: 50%
                    right: 0

            &.column6
                &:after
                    width: 50%
                    left: 0