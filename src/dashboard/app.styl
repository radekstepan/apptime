body
    font-family: 'Source Sans Pro', sans-serif
    margin: 0 auto
    width: 800px

#header
    background: #689CF0

    h1
        color: #FFF
        margin: 0
        padding: 5px 15px 10px 15px
        display: inline-block
        background: #487AC9
        font-size: 20px

table
    width: 100%

    thead
        tr
            border-bottom: 2px solid #ECEEF2

        h3
            color: #689CF0
            font-size: 16px
            text-transform: uppercase

        h4
            color: #ADA9A9
            font-size: 12px

    tbody
        th
            text-align: left

            h2
                color: #ADA9A9
                font-size: 18px
                font-weight: normal

        td
            padding: 20px 0
            width: 10%
            position: relative

            &:after
                position: absolute
                background: #EFF0F3
                width: 100%
                height: 1px
                content: ""
                display: block
                top: 50%
                z-index: -1

            .circle
                border-radius: 50%
                width: 12px
                height: 12px
                margin: 0 auto

                span
                    display: none

                &.green
                    background: #52C082

                &.orange
                    background: #FEC600

            &.column0
                &:after
                    width: 50%
                    right: 0

            &.column6
                &:after
                    width: 50%
                    left: 0

                .circle
                    width: 40px
                    height: 40px

                    span
                        display: block
                        font-size: 11px
                        text-align: center
                        line-height: 40px

                    &.green span
                        color: #FFF

                    &.orange span
                        color: #000