body
    background: url('/bg.png')
    font-family: 'Source Sans Pro', sans-serif

.wrapper
    padding-bottom: 30px

.box
    background: #FFF
    margin: 0 auto
    width: 800px
    border-radius: 4px
    box-shadow: 0px 1px 4px rgba(0,0,0,0.29)    

header
    width: 800px
    margin: 0 auto

    h1
        color: #333
        margin: 0
        padding: 10px 15px 15px 15px
        display: inline-block
        font-size: 30px

article
    padding: 20px

    &.errors
        h2
            color: #FF5050

        ul
            list-style-type: none
            margin: 0
            padding: 0

            li
                &:after
                    content: "."
                    display: inline-block
                    line-height: 30px

table
    width: 100%

    thead
        tr
            border-bottom: 2px solid #ECEEF2

        h3
            color: #689CF0
            font-size: 16px
            text-transform: uppercase
            margin: 0

        h4
            color: #ADA9A9
            font-size: 12px
            margin: 10px 0

    tbody
        .circle
            border-radius: 50%
            width: 36px
            height: 36px
            background-image: url('/status-lights.png')
            cursor: pointer

            &.red
                background-position: 0 0

            &.orange
                background-position: 77px 0

            &.green
                background-position: 37px 0

        th
            text-align: left

            .circle
                margin-right: 10px
                display: inline-block

            h2
                color: #333
                font-size: 16px
                display: inline-block
                margin: 8px 0
                vertical-align: top

        td
            padding: 20px 0
            width: 10%
            position: relative

            &:after
                position: absolute
                background: #EFF0F3
                width: 100%
                height: 1px
                content: ""
                display: block
                top: 50%

            &.column0
                &:after
                    width: 50%
                    right: 0

            &.column6
                &:after
                    width: 50%
                    left: 0

            .circle
                margin: 0 auto
                z-index: 1
                position: absolute
                top: 50%
                left: 50%
                margin: -18px